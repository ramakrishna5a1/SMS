<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:padding="16dp">

    <!-- Permissions Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_permissions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/permissions_acquired"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Permissions"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="10dp"
                android:textColor="@color/black" />

            <!-- Add your permission-related UI components here -->
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- File Path Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_file_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_permissions"
        android:layout_marginTop="8dp"
        android:elevation="4dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/file_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/textview"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="10dp"
                android:textColor="@color/black" />

            <!-- Add your UI components related to number of messages written here -->
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- JSON Parsing Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_json_parsing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_file_path"
        android:layout_marginTop="8dp"
        android:elevation="4dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/file_parsing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/file_parsing"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="10dp"
                android:textColor="@color/black" />

            <!-- Add your JSON parsing related UI components here -->
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Number of Messages Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_num_messages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_json_parsing"
        android:layout_marginTop="8dp"
        android:elevation="4dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/num_messages_written"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/number_of_messages_written"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="10dp"
                android:textColor="@color/black" />

            <!-- Add your UI components related to number of messages written here -->
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Import Messages Button -->
    <Button
        android:id="@+id/import_messages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/button_1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@color/teal_700" />

</RelativeLayout>
